<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Student for <%= @dojo.branch %></title>
  </head>
  <body>
    <h1>New Student</h1>
    <form action="/dojos/<%= @dojo.id %>/students" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      First Name: <input type="text" name="student[first_name]"><br><br>
      Last Name: <input type="text" name="student[last_name]"><br><br>
      Email Address: <input type="text" name="student[email]"><br><br>
      Dojo: <select name="student[dojo_id]">
        			<% @dojos.each do |dojo| %>
        				<% if dojo == @dojo %>
        					<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
        				<% else %>
        					<option value="<%= dojo.id %>"><%= dojo.branch %></option>
        				<% end %>
        			<% end %>
		</select><br><br>
      <input type="submit" value="Create"><br><br>
    </form>
    <%= link_to "Home", root_path %>  | <%= link_to "#{@dojo.branch}", dojo_path(@dojo) %>
  </body>
</html>
