<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All the Dojos</title>
  </head>
  <body>
    <div>
      <h1><%= flash[:notice] %></h1>
      <h1>Listing <%= @dojos.count %></h1>
      <table>
        <thead>
          <tr>
            <td>Coding Dojo Branch</td>
            <td>Street</td>
            <td>City</td>
            <td>State</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% @dojos.each do |dojo| %>
            <tr>
              <td><%= dojo.branch %></td>
              <td><%= dojo.street %></td>
              <td><%= dojo.city %></td>
              <td><%= dojo.state %></td>
              <td><%= link_to "Show", dojo_path(dojo) %> | <%= link_to "Edit", edit_dojo_path(dojo) %> | <%= link_to "Destroy", dojo, :method => :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <a href="dojos/new">New Dojo</a>
    </div>
  </body>
</html>
