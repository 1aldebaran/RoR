<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @dojo.branch%> Dojo</title>
  </head>
  <body>
    <h1><%= @dojo.branch%> Dojo  <%= link_to "Edit", edit_dojo_path(@dojo) %></h1>
    <p>Address: <%= @dojo.street%></p>
    <p>City: <%= @dojo.city%>  state: <%= @dojo.state%></p>
    <h2>Student Roster</h2>
    <table>
      <thead>
        <tr>
          <td>First Name</td>
          <td>Last Name</td>
          <td>Email</td>
          <td>Actions</td>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><%= link_to "Show", dojo_student_path(@dojo, student) %> | <%= link_to "Edit", edit_dojo_student_path(@dojo, student) %> | <%= link_to "Destroy", dojo_student_path(@dojo, student), :method => :delete %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Home", root_path %>  | <%= link_to "Add Student", new_dojo_student_path(@dojo) %>
  </body>
</html>
