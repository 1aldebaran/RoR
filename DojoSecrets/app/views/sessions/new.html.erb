<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dojo Secrets</title>
  </head>
  <body>
    <h1>Login</h1>
    <form action="/sessions" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      Username: <input type="text" name="username"><br><br>
      Password: <input type="password" name="password"><br><br>
      <input type="submit" value="Login"><br><br>
    </form>
    <h1>Register</h1>
    <form action="/users" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      First Name: <input type="text" name="user[first_name]"><br><br>
      Last Name: <input type="text" name="user[last_name]"><br><br>
      Username: <input type="text" name="user[username]"><br><br>
      Email Address: <input type="text" name="user[email_address]"><br><br>
      Password: <input type="password" name="user[password]"><br><br>
      Password Confirmation: <input type="password" name="user[password_confirmation]"><br><br>
      <input type="submit" value="Register"><br><br>
    </form>
  </body>
</html>
